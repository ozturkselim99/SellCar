@model sellcar.webui.Models.IlModel
@{
    Layout = "_LayoutAdmin";
}
<div class="container-fluid my-2">
    <h3 class="mt-1">İl Düzenle</h3>
    <hr class="my-3">
    <div class="row">
        <div class="col-md-3">
            <form asp-controller="Admin" asp-action="IlEdit" method="post">
                <input type="hidden" asp-for="ilId" />
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">İl</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="adi" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
            </form>
        </div>
        <div class="col-md-9">
            <table id="example" class="table table-striped table-bordered  dt-responsive " style="width:100%">
                <thead>
                    <tr>
                        <th>İlan No</th>
                        <th>Fiyatı</th>
                        <th>Marka</th>
                        <th>Seri</th>
                        <th>Model</th>
                        <th>Yıl</th>
                        <th>Km</th>
                        <th>Renk</th>
                        <th>İl</th>
                        <th>İlan Tarihi</th>
                        <th>Anasayfa</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Ilanlar.Count; i++)
                    {
                        <tr>
                            <td>@Model.Ilanlar[i].IlanId</td>
                            <td>@Model.Ilanlar[i].fiyat.ToString("c")</td>
                            <td>@Model.Ilanlar[i].Marka.adi</td>
                            <td>@Model.Ilanlar[i].seri</td>
                            <td>@Model.Ilanlar[i].model</td>
                            <td>@Model.Ilanlar[i].yil</td>
                            <td>@Model.Ilanlar[i].kilometre</td>
                            <td>@Model.Ilanlar[i].renk</td>
                            <td>@Model.Ilanlar[i].Il.adi</td>
                            <td>@Model.Ilanlar[i].ilanTarihi</td>
                            <td>
                                @if (Model.Ilanlar[i].anasayfa)
                                {
                                    <i class="fas fa-check-circle"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times-circle"></i>
                                }
                            </td>
                            <td>
                                <a href="/admin/ilan/@Model.Ilanlar[i].IlanId" class="btn btn-primary btn-sm mr-2"><i class="fas fa-edit"></i></a>
                                <form action="/admin/IlDelete" method="post" style="display:inline">
                                    <input type="hidden" name="IlanId" value="@Model.Ilanlar[i].IlanId" />
                                    <button type="submit" class="btn btn-danger btn-sm "><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



