@{
    Layout = "_LayoutAdmin";
}
<div class="container-fluid">
    <h3 class="mt-2">İstatistikler</h3>
    <hr />
    <div class="row ">
        <div class="col-lg-4 col-md-6" style="margin-top: 20px">
            <div class="card h-100">
                <div class="card-body bg-success text-white">
                    <div class="row h-100">
                        <div class="col-md-3">
                            <i class="fas fa-users fa-4x"></i>
                        </div>
                        <div class="col-md-9 text-right">
                            <h2>@ViewBag.userCount</h2>
                            <h5>  Kullanıcı Sayısı</h5>
                        </div>
                    </div>
                </div>
                <a href="/admin/user/list">
                    <div class="card-footer bg-light text-success">
                        <span class="float-left">Detayları görüntüle</span>
                        <span class="float-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-6" style="margin-top: 20px">
            <div class="card h-100">
                <div class="card-body bg-success text-white">
                    <div class="row h-100">
                        <div class="col-md-3">
                            <i class="fas fa-check-square fa-4x"></i>
                        </div>
                        <div class="col-md-9 text-right">
                            <h2>@ViewBag.confirmedUserCount</h2>
                            <h5>  Onaylı Kullanıcı Sayısı</h5>
                        </div>
                    </div>
                </div>
                <a href="/admin/user/list">
                    <div class="card-footer bg-light text-success">
                        <span class="float-left">Detayları görüntüle</span>
                        <span class="float-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-6" style="margin-top: 20px">
            <div class="card h-100">
                <div class="card-body bg-success text-white">
                    <div class="row h-100">
                        <div class="col-md-3">
                            <i class="far fa-newspaper fa-4x"></i>
                        </div>
                        <div class="col-md-9 text-right">
                            <h2>@ViewBag.ilanCount</h2>
                            <h5>  İlan Sayısı</h5>
                        </div>
                    </div>
                </div>
                <a href="/admin/ilan/list">
                    <div class="card-footer bg-light text-success">
                        <span class="float-left">Detayları görüntüle</span>
                        <span class="float-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-6 col-md-6" style="margin-top: 20px">
            <div class="card h-100 ">
                <div class="card-body bg-success text-white">
                    <div class="row h-100">
                        <div class="col-md-3">
                            <i class="fas fa-arrow-up fa-4x"></i>
                        </div>
                        <div class="col-md-9 text-right">
                            <h2>@(ViewBag.enÇokIlanVerilenIl.adi)</h2>
                            <h5>  İlan Sayısı En Fazla Olan İl</h5>
                        </div>
                    </div>
                </div>
                <a href="/admin/il/list">
                    <div class="card-footer bg-light text-success">
                        <span class="float-left">Detayları görüntüle</span>
                        <span class="float-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-6 col-md-6" style="margin-top: 20px">
            <div class="card h-100">
                <div class="card-body bg-success text-white">
                    <div class="row h-100">
                        <div class="col-md-3">
                            <i class="fas fa-arrow-down fa-4x"></i>
                        </div>
                        <div class="col-md-9 text-right">
                            <h2>@(ViewBag.enAzIlanVerilenIl.adi)</h2>
                            <h5>  İlan Sayısı En Az Olan İl</h5>
                        </div>
                    </div>
                </div>
                <a href="/admin/il/list">
                    <div class="card-footer bg-light text-success">
                        <span class="float-left">Detayları görüntüle</span>
                        <span class="float-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>