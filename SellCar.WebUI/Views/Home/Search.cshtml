@model sellcar.webui.Models.IlanListViewModel

@await Html.PartialAsync("_header")
<main class="my-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-md-4 ">
                <div class="bg-light border-right markalar  ">
                    @await Component.InvokeAsync("Markalar")
                </div>
                @await Html.PartialAsync("_filter")
            </div>
            <div class="col-lg-9 col-md-8">
                <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>İlan Resmi</th>
                            <th>Fiyatı</th>
                            <th>İlan Başlığı</th>
                            <th>Marka</th>
                            <th>Seri</th>
                            <th>Model</th>
                            <th>Yıl</th>
                            <th>Km</th>
                            <th>Renk</th>
                            <th>İlan Tarihi</th>
                            <th>İl</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.ilanlar.Count; i++)
                        {
                            <tr>
                                <td><a href="/car/details/@Model.ilanlar[i].IlanId"><img src="@Model.ilanlar[i].IlanResimleri[0].url" width=90></a> </td>
                                <td><i class="fas fa-lira-sign mr-1"></i>@Model.ilanlar[i].fiyat</td>
                                <td>@Model.ilanlar[i].ilanBasligi</td>
                                <td>@Model.ilanlar[i].Marka.adi</td>
                                <td>@Model.ilanlar[i].seri</td>
                                <td>@Model.ilanlar[i].model</td>
                                <td>@Model.ilanlar[i].yil</td>
                                <td>@Model.ilanlar[i].kilometre</td>
                                <td>@Model.ilanlar[i].renk</td>
                                <td>@Model.ilanlar[i].ilanTarihi</td>
                                <td>@*@Model.ilanlar[i].il*@</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
<div class="container-fluid">
    @await Html.PartialAsync("_footer")
</div>
